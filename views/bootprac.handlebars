		<div class="container " id="postDiv">
			<div class="row" id="grid">
                
                <!-- data from data.json -->
                {{#each postData}}
                <div class="col col-lg-4 col-md-4 col-sm-6 col-xs-12 centered grid-item" id="post">
					<a id="postLink" href= "./discuss"> 
					<div id="imageborder">
						<img id="picture" src="{{imageURL}}"> 
					</div>
					<div class="container-fluid" id="titleBox" style="background-color: {{color}}">
						<h4 style="color:white " id="topicTitle">{{title}}</h4>
						<p style="color: white" id="subtitle">{{subtitle}}<p>
					</div>
					<div id="content" class="container-fluid" style="background-color: {{color}} ">
						<p id="contentText">{{description}}</p>
					</div>
                    <div id="author" class="container-fluid" style="background-color: white; height: 25px; padding-left: 3px; padding-right: 3px; padding-top: 3px;">
						<p style="font-size: 10pt; float: left; color: grey;">Anne Klein</p>
                        <i id="chat" class="glyphicon glyphicon-comment" style="float: right; color: grey; font-size: 10pt;">10</i>
                        <i id="like" class="glyphicon glyphicon-heart" style="float: right; color: grey; font-size: 10pt; margin-right: 10px;">20</i>       
					</div>
				</div>
                {{/each}}
                <!-- End -->
                

				<script src="https://npmcdn.com/masonry-layout@4.0/dist/masonry.pkgd.min.js"></script>
				<script>
					$('#grid').imagesLoaded( function(){
					  $('#grid').masonry({
					   itemSelector: '#post'
					  });
					});
				</script>
